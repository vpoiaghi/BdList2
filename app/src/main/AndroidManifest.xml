<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="bdlist.bdlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_tintin"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="project.navigation.activities.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="project.navigation.activities.PopupPossessionStatesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomPopupTheme">
        </activity>
        <activity
            android:name="project.navigation.activities.PopupPeriodCommentsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomPopupTheme">
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            tools:replace="android:screenOrientation"
            android:stateNotNeeded="true"/>
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
