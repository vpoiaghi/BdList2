<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="#ffffff" />
                    <stroke
                        android:width="1dp"
                        android:color="#504a4b" />

                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />
                </shape>
            </item>
            <item >
                <bitmap
                    android:gravity="right"
                    android:src="@drawable/btn_dropdown_normal" />
            </item>
        </layer-list>
    </item>

</selector>