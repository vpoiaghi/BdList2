<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/event_image"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_gravity="center_horizontal"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginBottom="5dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/event_txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Dates"
                />

            <TextView
                android:id="@+id/event_txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Nom"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/event_img_reminder"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_gravity="top"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/event_txt_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Lieu"
        />

    <TextView
        android:id="@+id/event_txt_comments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:textSize="15sp"
        android:text="Commentaires"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/event_img_in_possession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icn_possession_in"/>

    </LinearLayout>

</LinearLayout>