<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_lay_back"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/searchresult_btn_series"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="0 séries"/>

        <TextView
            android:id="@+id/searchresult_btn_editions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="0 éditions"/>

        <TextView
            android:id="@+id/searchresult_btn_goodies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="0 para-bds"/>

    </LinearLayout>

    <project.navigation.components.ExtendedListView
        android:id="@+id/searchresult_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </project.navigation.components.ExtendedListView>


</LinearLayout>