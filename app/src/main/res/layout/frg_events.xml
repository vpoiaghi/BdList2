<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/frg_list_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100">
    </ListView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:background="@drawable/style_search_rightpart"
        >

        <project.navigation.components.ImageViewButton
            android:id="@+id/events_btn_show_checked_events"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/btn_show_checked"/>

        <project.navigation.components.ImageViewButton
            android:id="@+id/events_btn_show_unchecked_events"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/btn_show_unchecked"/>

    </LinearLayout>

</LinearLayout>