<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/searchresult_edition_img_item"
        android:layout_width="144px"
        android:layout_height="256px"
        android:scaleType="fitStart"
        android:layout_marginRight="5dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/searchresult_edition_txt_seriename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Nom de la série"
             />

        <TextView
            android:id="@+id/searchresult_edition_txt_editionname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Titre de l'edition"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="85"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/searchresult_edition_txt_editionnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Numéro de l'édition"
                    />

                <TextView
                    android:id="@+id/searchresult_edition_txt_editor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Editeur"
                    />

                <TextView
                    android:id="@+id/searchresult_edition_txt_parutiondate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Parution"
                    />

            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15">
                <ImageView
                    android:id="@+id/searchresult_edition_img_possession"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_gravity="bottom|right"/>
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

</FrameLayout>