<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">

    <ImageView
        android:id="@+id/itm_event_img_state"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5px"
        />

    <ImageView
        android:id="@+id/itm_event_img_reminder"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5px"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/itm_event_img_state"
        android:layout_toLeftOf="@id/itm_event_img_reminder"
        android:layout_margin="5px"
        android:background="@color/white">

        <TextView
            android:id="@+id/itm_event_txt_date_and_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Titre de l'edition"
            />

        <TextView
            android:id="@+id/itm_event_txt_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Numéro de l'édition"
            />

        <TextView
            android:id="@+id/itm_event_txt_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Editeur"
            />

    </LinearLayout>

</RelativeLayout>